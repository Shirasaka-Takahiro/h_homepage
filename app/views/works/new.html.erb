<h1>Works#new</h1>
<%= form_with model: @work, local: true do | f | %>
  <div class="work_error">
    <% if @work.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @work.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="work_new">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "タイトル" %>
    </div>
    <div class="form-group">
      <%= f.file_field :image, class: 'btn btn-primary' %>
      <%= f.submit 'アップロード', class: 'btn btn-primary' %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control', placeholder: '内容' %>
    </div>
    <%= f.submit '投稿する', class: 'btn btn-primary' %>
  </div>
<% end %>
